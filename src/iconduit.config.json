{
  "outputPath": "../artifacts/dist",
  "name": "Snout",
  "description": "Snout Router",
  "urls": {
    "base": "https://snout.dev"
  },
  "colors": {
    "background": "hsl(350, 100%, 65%)",
    "brand": "hsl(350, 100%, 85%)"
  },
  "targets": {
    "installer": []
  },
  "outputs": {
    "exclude": [
      "appleTouchStartup",
      "browserconfigXml",
      "facebookAppIcon",
      "macosIcns",
      "notificationBadge",
      "notificationIcon",
      "serviceWorker",
      "webAppIconMaskable",
      "webAppIconMasked",
      "webAppManifest",
      "windowsIco",
      "windowsTileLarge",
      "windowsTileMedium",
      "windowsTileSmall",
      "windowsTileWide"
    ],
    "include": [
      "githubAppIcon"
    ]
  },
  "definitions": {
    "input": {
      "githubAccountIcon": {
        "strategy": "degrade",
        "options": {
          "to": "iconMaskableNoPadding"
        }
      },
      "githubAppIcon": {
        "strategy": "composite",
        "options": {
          "layers": [
            {"input": "iconForeground", "style": "githubAppIconScale"}
          ]
        }
      }
    },
    "output": {
      "githubAppIcon": {
        "input": "githubAppIcon",
        "name": "github-app-icon.png",
        "sizes": ["githubAccountIcon"]
      }
    },
    "style": {
      "githubAppIconScale": {
        "transform": "scale(calc(108 / 52))"
      }
    },
    "size": {
      "githubAccountIcon": {"key": "primary", "width": 1024, "height": 1024}
    }
  }
}
